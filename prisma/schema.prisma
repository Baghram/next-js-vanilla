generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String
  passwords String
  Content   Content[]
  Profile   Profile[]
}

model Content {
  id               Int       @id @default(autoincrement())
  title            String?
  descriptions     String?
  author           Int
  eventdate        DateTime?
  publishdate      DateTime  @default(dbgenerated())
  contentphoto     String?
  contentvideo     String?
  contentphototype String?
  User             User      @relation(fields: [author], references: [id])
}

model Profile {
  id         Int    @id @default(autoincrement())
  handphone  String
  alamat     String
  avatar     String
  userid     Int?
  avatartype String
  User       User?  @relation(fields: [userid], references: [id])
}
